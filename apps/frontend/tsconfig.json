{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "jsx": "preserve",
    "types": [
      "node",
      "@cloudflare/workers-types",
      "vitest/globals",
      "@testing-library/jest-dom",
      "./types/global"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
        "paths": { "@/*": ["./*"] },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/globals.scc"],
  "exclude": ["node_modules", ".next", "src/stories"]
}
